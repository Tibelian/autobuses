<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/es_autobus?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="POJOS/CompraBackup.hbm.xml"/>
    <mapping resource="POJOS/Viajero.hbm.xml"/>
    <mapping resource="POJOS/ViajeBackup.hbm.xml"/>
    <mapping resource="POJOS/OcupacionBackup.hbm.xml"/>
    <mapping resource="POJOS/ViajeroBackup.hbm.xml"/>
    <mapping resource="POJOS/Cliente.hbm.xml"/>
    <mapping resource="POJOS/Horario.hbm.xml"/>
    <mapping resource="POJOS/Tarjeta.hbm.xml"/>
    <mapping resource="POJOS/Ocupacion.hbm.xml"/>
    <mapping resource="POJOS/Estacion.hbm.xml"/>
    <mapping resource="POJOS/Ruta.hbm.xml"/>
    <mapping resource="POJOS/Viaje.hbm.xml"/>
    <mapping resource="POJOS/Compra.hbm.xml"/>
    <mapping resource="POJOS/Administrador.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
